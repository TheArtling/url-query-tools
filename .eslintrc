{
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "jsx": true,
          "modules": true
      }
    },
    "rules": {
        "no-undef": 1,
        "indent": [
            "error",
            2,
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "double",
            {"avoidEscape": true, "allowTemplateLiterals": true}
        ],
        "semi": [
            2,
            "never"
        ],
        "no-empty-function": [
          "error",
          {
            "allow": ["arrowFunctions"]
          }
        ],
        "default-case": "error",
        "keyword-spacing": [
          "error",
          {
            "before": true,
            "after": true
          }
        ],
        "space-in-parens": ["error", "never"]
    }
}
